{
  "name": "scaled-fractal",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Brianzchen/scaled-fractal.git",
  "author": "Brian Chen <brian.chen@tabcorp.com.au>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*/*"
    ]
  },
  "engines": {
    "node": ">=10.0.0",
    "yarn": ">=1.10.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "clean": "rimraf dist && rimraf public/index.html && rimraf public/css/styles.min.css",
    "uglify:css": "uglifycss public/css/styles.css > public/css/styles.min.css",
    "uglify:html": "html-minifier --minify-css --minify-js --remove-comments --collapse-whitespace public/index.template.html -o public/index.html",
    "uglify": "npm run uglify:css && npm run uglify:html",
    "copy": "copyfiles -u 1 public/css/styles.min.css public/scripts/* public/manifest.json public/robots.txt dist",
    "prep": "npm run clean && npm run uglify && npm run copy",
    "analyze": "npm run prep && cross-env NODE_ENV=production webpack --config webpack/webpack.analyze.js",
    "start": "npm run prep && webpack --config webpack/webpack.dev.js && webpack serve --config webpack/webpack.dev.js",
    "build": "npm run prep && cross-env NODE_ENV=production webpack --config webpack/webpack.prod.js"
  },
  "dependencies": {
    "@core/reducers": "1.0.0",
    "@pkgs/components": "1.0.0",
    "@pkgs/root-dom-tag": "1.0.0",
    "aphrodite": "^2.4.0",
    "connected-react-router": "^6.8.0",
    "history": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-flow": "^7.12.1",
    "@babel/preset-react": "^7.12.7",
    "@testing-library/react": "^11.2.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.1",
    "babel-plugin-transform-imports": "^1.5.1",
    "copyfiles": "^2.4.0",
    "cross-env": "^5.2.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-flowtype": "^5.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "flow-bin": "^0.147.0",
    "html-minifier": "^3.5.20",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^1.1.2",
    "jest": "^26.6.3",
    "lint-staged": "^9.1.0",
    "rimraf": "^2.6.2",
    "terser-webpack-plugin": "^5.0.3",
    "uglifycss": "^0.0.29",
    "webpack": "^4.0.0",
    "webpack-bundle-analyzer": "^4.1.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn flow"
    }
  },
  "lint-staged": {
    "**/*.js": "eslint"
  }
}
